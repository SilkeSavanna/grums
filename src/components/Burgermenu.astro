    .nav-menu {
      display: none;
      flex-direction: column;
      text-align: center;
      align-items: center;
      width: 50vw;
      list-style-type: none;
      position: absolute;
    }
  }
</style>

<script>
  const burgerMenu = document.querySelector(".nav-menu"); // Erstat ".nav-menu" med din burgermenu's selector
  const burgerButton = document.querySelector(".hamburger"); // Erstat ".hamburger" med din burgerknap's selector

  burgerButton.addEventListener('click', toggleSideMenu)

  function toggleSideMenu() {
    burgerMenu.classList.toggle('active')
    burgerButton.classList.toggle('active')
  }
</script>
