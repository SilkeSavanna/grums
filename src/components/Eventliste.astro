---
const { data } = Astro.props;
console.log(data);

import "../styles/general.css";
---

<article>
  <img src={"/public/img/" + `${data.image}`} alt="" />
  <div class="text">
    <p>{data.dato}</p>
    <p>{data.price}</p>
  </div>
</article>

<style>
  article {
    width: 180px;
    color: white;
    padding: 5px;
    white-space: nowrap;
    margin-left: 5px;
    margin-right: 5px;
  }

  p {
    font-size: var(--font-size-p-mobile);
    color: var(---red);
  }

  .text {
    border: 2px solid var(---red);
    display: flex;
    justify-content: center;
    gap: 60px;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  @media (min-width: 800px) {
    article {
      width: 260px;
      color: white;
      white-space: nowrap;
      padding: 10px;
    }

    .text {
      border: 2px solid var(---red);
      display: flex;
      justify-content: center;
      gap: 100px;
      padding-top: 10px;
      padding-bottom: 10px;
    }
  }
</style>
