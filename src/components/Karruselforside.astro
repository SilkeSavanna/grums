---
import "../styles/general.css";
---

<div class="karrusel_forside">
  <div class="container_event">
    <div class="slider_event">
      <button id="prev_slide" class="pil"> <img src="/public/img/pil_left.png" alt="pil_knap" /> </button>
      <div class="img_event">
        <img src="/public/img/forkertimg.jpeg" alt="eventimg1" class="img_event_item" />
        <img src="/public/img/forkertimg.jpeg" alt="eventimg2" class="img_event_item" />
        <img src="/public/img/forkertimg.jpeg" alt="eventimg3" class="img_event_item" />
        <img src="/public/img/forkertimg.jpeg" alt="eventimg1" class="img_event_item" />
        <img src="/public/img/forkertimg.jpeg" alt="eventimg2" class="img_event_item" />
        <img src="/public/img/forkertimg.jpeg" alt="eventimg3" class="img_event_item" />
      </div>
      <button id="next_slide" class="pil"> <img src="/public/img/pil_right.png" alt="pil_knap" /> </button>
    </div>
  </div>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .karrusel_forside {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 20vh;
    margin: 20px;
    margin-top: 50px;
    margin-bottom: 50px;
  }

  .slider_event .img_event {
    display: grid;
    gap: 15px;
    font-size: 0;
    overflow-x: auto;
    scrollbar-width: none;
    grid-template-columns: repeat(6, 1fr);
  }

  .slider_event .img_event::-webkit-scrollbar {
    display: none;
  }

  .slider_event .img_event .img_event_item {
    width: 150px;
    height: 200px;
    object-fit: cover;
  }

  .container_event {
    max-width: 550px;
    width: 95%;
  }

  .slider_event {
    position: relative;
  }

  .slider_event .pil {
    position: absolute;
    top: 50%;
    height: 30px;
    width: 30px;
    background-color: transparent;
    border: none;
    outline: none;
    cursor: pointer;
    border-radius: 50%;
    transform: translateY(-50%);
  }

  .slider_event .pil:hover {
    opacity: 30%;
  }

  .slider_event .pil#prev_slide {
    left: -20px;
  }

  .slider_event .pil#next_slide {
    right: -20px;
  }

  @media (min-width: 800px) {
    .slider_event .pil#prev_slide {
      left: -50px;
    }

    .slider_event .pil#next_slide {
      right: -50px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const prevButton = document.getElementById("prev_slide");
    const nextButton = document.getElementById("next_slide");
    const imgContainer = document.querySelector(".slider_event .img_event");

    const scrollAmount = 250; // Juster denne v√¶rdi efter behov

    prevButton.addEventListener("click", function () {
      imgContainer.scrollLeft -= scrollAmount;
    });

    nextButton.addEventListener("click", function () {
      imgContainer.scrollLeft += scrollAmount;
    });
  });
</script>
