---
import Button from "../components/Button.astro";
import Eventknap from "../components/Eventknap.astro";
import Burgermenu from "../components/Burgermenu.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet" />
	<script src="https://kit.fontawesome.com/ff2cb96f80.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <section id="hero">
    <header>
      <Burgermenu />
    </header>
   
    <div class="hero_box">
      
      <img class="logo" src="../../public/img/logo_grums.webp" alt="">
    
    <div>
      <h1 class="h1_hero">Et fælleskab for Københavns lokale</h1>
    </div>
    </div>
    <div class="hero_box2">
    <Eventknap />
  </div>
  </section>
    <main>
      <Button />
     
    </main>
<Footer/>
	
  </body>
</html>

<style>
  #hero{

  width: 100%;
  height: 300px;
  background-image: url(../../public/img/herosection_img.webp);
background-repeat: no-repeat;
background-position: center;
background-size: cover;
  }

  .hero_box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;

    
  }

  .hero_box2{
    display: flex;
    flex-direction: row;
    justify-content: center;
  margin-top: 20px;
    
  }

  .h1_hero{
    font-size: 20px;
    color: white;
    font-family: "Roboto";
    font-weight: 500;
    padding-left: 70px;
    padding-right: 70px;
    margin-top: 20%;
  }

  .logo{
    display: none;
    

  }

  @media (min-width: 800px){
    #hero{
      height: 750px;
    }

    .h1_hero{
    font-size: 40px;
    font-weight: 500;
    padding-left: 0;
    margin-top: 4%;
    margin-bottom: 3%;
  }

  .logo{
    display: block;
    width: 200px;
    height: 200px;
    margin-left: 43%;
    margin-top: 10%;

  }
  }
</style>
